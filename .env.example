# Database (SQLite)
# Points to prisma/dev.db (relative to schema.prisma)
DATABASE_URL="file:./dev.db"

# Server Timezone
TZ=America/New_York

# Public URL (for OAuth redirects and sharing)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Discord Integration (Required for Bot & Auth)
DISCORD_APP_ID=
DISCORD_CLIENT_SECRET=
DISCORD_BOT_TOKEN=

# Telegram Integration (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=

# Deployment Mode
# Set to 'true' for the public hosted version (enables sitemap, SEO/AEO indexing, etc.)
# Leave unset or 'false' for self-hosted (privacy mode: noindex, no external tracking)
NEXT_PUBLIC_IS_HOSTED=false

# Set to 'true' at Docker build time only (switches to standalone Next.js output)
# Do not set manually in .env â€” set via Dockerfile ENV
IS_DOCKER_BUILD=false

# Logging
# Verbosity: debug | info | warn | error (default: info)
LOG_LEVEL=info

# Security
# Required to authorize external calls to /api/cron/cleanup from outside localhost
# Generate with: openssl rand -hex 32
CRON_SECRET=

# Event Retention (days after event passes before cleanup removes it)
CLEANUP_RETENTION_DAYS_FINALIZED=1
CLEANUP_RETENTION_DAYS_DRAFT=1
CLEANUP_RETENTION_DAYS_CANCELLED=1
